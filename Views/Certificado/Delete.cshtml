@model Software2.Models.Logos
@{
    ViewData["Title"] = "Delete";
    Layout = "_Administrador";
}
<main>
<div>
    <h4>Información del Logo</h4>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-5">
            <!--@Html.DisplayNameFor(model => model.NombreInsti)-->
            Nombre de la Institución:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreInsti)
        </dd>
        <dt class = "col-sm-5">
            <!--@Html.DisplayNameFor(model => model.ImageName)-->
            Logo:
        </dt>
        <dd class = "col-sm-10">
            <img class="img-responsive" width="100" height="100" src="/Images/@Html.DisplayFor(model => model.ImageName)" alt="@Html.DisplayFor(model => model.ImageName)"  /></center>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Eliminar" class="btn btn-danger" onclick="return confirm('¿Desea eliminar el logo?')"/>
        <a class="btn btn-info" asp-action="Index">Regresar</a>
    </form>
</div>
</main>