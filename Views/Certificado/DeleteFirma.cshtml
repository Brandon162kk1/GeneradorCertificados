@model Software2.Models.Firmas
@{
    ViewData["Title"] = "DeleteFirmas";
    Layout = "_Administrador";
}
<main>
<div>
    <h4><center>Información del Firmante</center></h4>
    <hr/>

<div class="row">
      <div class="col-lg-7 mx-auto">
        <div  class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 330px;">
          <div class="card-body">
            <dl class="row">
        <dt class = "col-sm-10">
            Nombre del Firmante:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreFirma)
        </dd>
        <dt class = "col-sm-10">
            Firma:
        </dt>
        <dd class = "col-sm-12">
            <br><center><img class="img-responsive" width="150" height="70" src="/Images/@Html.DisplayFor(model => model.ImageNameFir )" alt="@Html.DisplayFor(model => model.ImageNameFir )"  /></center>
        </center>
        </dd>
    </dl>
    <center><form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Eliminar" class="btn btn-danger" onclick="return confirm('¿Desea eliminar la firma?')"/>
        <a class="btn btn-info" asp-action="Firmas">Regresar</a>
    </form></center>
          </div>
        </div>
      </div> 
      </div>
</div>
</main>