@model IEnumerable<Software2.Models.Logos>
@{
    ViewData["Title"] = "Admin";
    Layout = "_Administrador";
    var count = 1;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<main>
    <center><h2>Logos Registradas</h2></center>
<a class="btn btn-outline-danger" asp-action="Index">Regresar</a>
<a class="btn btn-outline-danger" asp-action="CrearLogo">Crear Logos</a>
<br><br>
  <table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">
                â„–
            </th>
            <th scope="col">
                IMAGEN
            </th>
            <th scope="col">
                NOMBRE INSTITUCION
            </th>
            <th scope="col">
                OPCIONES
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           <th scope="row">
                @count
            </th>
            <td>
              <div class="card-body">
                  <div class="card-img-actions">
                    <center><img class="img-responsive" width="150" height="70"
                       src="/Images/@item.ImageName" alt="@item.ImageName"  /></center>
                  </div>
                </div>
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.NombreInsti)
            </td>
            <td>
               <!--<a asp-action="" asp-route-id="@item.Id"><img src="/Images/editar.png" width="40px" heigh="40px"></a>-->
               <a asp-action="Delete" asp-route-id="@item.Id" ><img src="/Images/eliminar.png" width="40px" heigh="40px"></a>
            </td>               
        </tr>
        count++;
}
    </tbody>
</table>              
</main>