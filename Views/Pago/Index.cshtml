@model Software2.Models.Pago
@{
    ViewData["Title"] = "Admin";
    Layout = "_Administrador";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<main>
    <a class="btn btn-outline-danger" asp-action="">Regresar</a>
<br><br>
<div class="row">
      <div class="col-lg-7 mx-auto"> <!--class="col-lg-7 mx-auto"-->
        <div  class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 280px;">
          <div class="card-body">
            <form asp-controller="Pago" asp-action="Pagar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label">Tarjeta</label>
                </div>
                <div class="col-sm-6">
                  <select asp-for="NombreTarjeta" class="form-select">
                    <option selected>Elige</option>
                    <option value="1">BCP</option>
                    <option value="2">BBVA</option>
                    <option value="3">Scotiabank</option>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label">Numero de Tarjeta</label>
                </div>
                <div class="col-sm-6">
                  <input asp-for="NumeroTarjeta" type="number" class="form-control" placeholder="XXXX-XXXX-XXXX-XXXX" />
                </div>
              </div>              
              <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label">Fecha de Vencimiento</label>
                </div>
                <div class="col-sm-6">
                  <input asp-for="DueDateYYMM" type="month" class="form-control" />
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label">CVV</label>
                </div>
                <div class="col-sm-6">
                  <input asp-for="Cvv" type="number" class="form-control" placeholder="---345"/>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label" class="control-label p-texto">Monto Total</label>
                </div>
                <div class="col-sm-6">
                  <input asp-for="MontoTotal" class="form-control" data-thousands="," data-decimal="." />
                </div>
              </div> 
              <div class="col-md-6">
               <input type="submit" value="Pagar" class="btn btn-primary"/>
              </div>
            </form>
          </div>
        </div>
      </div> 
      </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</main>