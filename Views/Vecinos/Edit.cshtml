@model Software2.Models.Vecinos
@{
    ViewData["Title"] = "Edit";
    Layout = "_Administrador";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<main>
<a class="btn btn-outline-danger" asp-action="Index">Regresar</a>
<br><br>
      <div class="row">
      <div class="col-lg-7 mx-auto">
        <div  class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 330px;">
          <div class="card-body">
            <form asp-action="Edit" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
  <div class="col-md-6">
    <label class="control-label" for="validationCustom01">Nombres</label>
                <input asp-for="Nombres" class="form-control" id="validationCustom01" required />
                <span asp-validation-for="Nombres" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label class="control-label" for="validationCustom01">Apellidos</label>
                <input asp-for="Apellidos"class="form-control" id="validationCustom01" required/>
                <span asp-validation-for="Apellidos" class="text-danger"></span>
  </div>
  <div class="col-md-4">
    <label class="control-label" for="validationCustom01">Dni</label>
                <input asp-for="Dni" class="form-control" id="validationCustom01" required/>
                <span asp-validation-for="Dni" class="text-danger"></span>
  </div>
  <div class="col-md-4">
    <label class="control-label" for="validationCustom01">Celular</label>
                <input asp-for="Celular" class="form-control" id="validationCustom01" required/>
                <span asp-validation-for="Celular" class="text-danger"></span>
  </div>
  <div class="col-md-10">
    <label class="control-label" for="validationCustom01">Correo</label>
                <input asp-for="Correo" type="email" class="form-control" id="validationCustom01" required/>
                <span asp-validation-for="Correo" class="text-danger"></span>
  </div>
  <div class="col-md-6">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
   </div>
</form>
          </div>
        </div>
      </div> 
      </div>

</main>