@model IEnumerable<Software2.Models.Vecinos>
@{
    ViewData["Title"] = "Admin";
    Layout = "_Administrador";
    var count = 1;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<main>
    <center><h4>Lista de Usuarios Inscritos en Eventos</h4></center><br>
    <form class="row g-3"><!--nofuncioan-->
        <p class="col-auto">Buscar por :</p>
        <div class="col-auto">
            <input type="email" class="form-control" name="usuario" placeholder="Dni">
        </div>
        <div class="col-auto">
            <input type="email" class="form-control" name="usuario" placeholder="Evento">
        </div>
    </form><br>
    <table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">
                â„–
            </th>
            <th scope="col">
                DNI
            </th>
            <th scope="col">
                NOMBRES y APELLIDOS
            </th>
            <th>
                CORREO
            </th>
            <th>
                CELULAR
            </th>
            <th>
                EVENTO
            </th>
            <th>
                PDF
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           <th scope="row">
                @count
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres) @Html.DisplayFor(modelItem => item.Apellidos)
            </td>                
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evento)
            </td>
            <td>
                <div class="btn-group" role="group">
                <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Dropdown
                </button>
               </div>
            </td>
        </tr>
        count++;
}
    </tbody>
</table>
</main>