@{
    ViewData["Title"] = "Admin";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<a class="btn btn-outline-danger" asp-action="Listar">Regresar</a>
<br><br>
<div class="row">
      <div class="col-lg-7 mx-auto">
        <div  class="card" style="border-radius: 20px; padding: 1rem 1rem; height: 280px;">
          <div class="card-body">
            <form asp-controller="Home" asp-action="Pagar" for="validationCustom01">
            <div class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label" for="validationCustom01">Tarjeta</label>
                </div>
                <div class="col-sm-6">
                  <select class="form-select" for="validationCustom01">
                    <option selected>Elige</option>
                    <option value="1">BCP</option>
                    <option value="2">BBVA</option>
                    <option value="3">Scotiabank</option>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label" for="validationCustom01">Numero de Tarjeta</label>
                </div>
                <div class="col-sm-6">
                  <input  type="number" class="form-control" placeholder="XXXX-XXXX-XXXX-XXXX" />
                </div>
              </div>              
              <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label" for="validationCustom01">Fecha de Vencimiento</label>
                </div>
                <div class="col-sm-6">
                  <input type="month" class="form-control" />
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label" for="validationCustom01">CVV</label>
                </div>
                <div class="col-sm-6">
                  <input type="number" class="form-control" placeholder="---345"/>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6">
                  <label class="control-label" class="control-label p-texto" for="validationCustom01">Monto Total</label>
                </div>
                <div class="col-sm-6">
                  <input class="form-control" data-thousands="," data-decimal="." />
                </div>
              </div> 
              <div class="col-md-6">
               <input type="button" value="Pagar" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
               </input>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Se Realizo el pago con exito!!!
      </div>
    </div>
  </div>
</div>
              </div>
            </form>
          </div>
        </div>
      </div> 
      </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}