@model List<Software2.Models.Vecinos>
@{
    ViewData["Title"] = "Home Page";
}

@if(Model.Count == 0){
    <div class="col-lg-12 mx-auto">
      <div class="alert alert-danger text-center">Lo sentimos, su búsqueda no ha obtenido ningún resultado.</div>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto">
      <a asp-controller="" asp-action="" class="btn btn-primary">Ingresar otra consulta</a>
    </div>
}else{
      <div class="alert alert-warning text-center">Recuerda debes pagar para poder descargar tus certificados</div>
      <!--<a asp-controller="Pago" asp-action="Pagar" class="btn btn-primary">Pagar Aqui</a>-->
      <a class="btn btn-outline-danger" asp-action="Index">Regresar</a>
      <br>
<div class="container">
    <h1>@ViewData["Message"]</h1>
    <br>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div  class="col-sm-4">
              <div id="carta" class="card mb-3">
                <div class="card-body">
                  <center>
                  <h4 class="card-title">@Html.DisplayFor(modelItem => item.Nombres)@Html.DisplayFor(modelItem => item.Apellidos)</h4>
                  <p class="card-text">Correo: @Html.DisplayFor(modelItem => item.Correo)</p>
                  <p class="card-text">Evento: @Html.DisplayFor(modelItem => item.Evento)</p>
                  </center>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>
}